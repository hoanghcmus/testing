<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5dp"
    android:layout_marginRight="@dimen/_5dp"
    android:layout_marginTop="@dimen/_5dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_8dp"
        android:layout_marginRight="@dimen/_16dp"
        android:layout_toRightOf="@id/avatar"
        android:orientation="vertical"
        android:padding="@dimen/_10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reputation_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold"
                tools:text="Reputation type" />

            <TextView
                android:id="@+id/reputation_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_2dp"
                android:layout_toLeftOf="@+id/img_reputation_type"
                android:fontFamily="sans-serif"
                android:textColor="@color/grey_light_new"
                android:textSize="@dimen/_14sp"
                tools:text="vote" />

            <ImageView
                android:id="@+id/img_reputation_type"
                android:layout_width="19dp"
                android:layout_height="@dimen/_14dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_like"
                android:tint="@color/colorPrimary" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/post_ids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/_6dp"
                android:fontFamily="sans-serif"
                android:text="@string/sof_user"
                android:textColor="@color/grey_light_new"
                android:textSize="@dimen/_14sp"
                tools:text="Post Id" />

            <TextView
                android:id="@+id/create_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/_6dp"
                android:layout_toLeftOf="@+id/star"
                android:fontFamily="sans-serif"
                android:textColor="@color/grey_light_new"
                android:textSize="@dimen/_14sp"
                tools:text="Create date" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>